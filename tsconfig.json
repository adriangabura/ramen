{
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "awesomeTypescriptLoaderOptions": {
    "ignoreDiagnostics": [
      7005
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    ".storybook/**/*.js"
  ]
}
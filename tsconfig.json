{
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "target": "es5",
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    ".storybook/**/*.js"
  ]
}
{
  "compilerOptions": {
    "lib": [
      "dom",
      "es2017"
    ],
    "jsx": "react",
    "declaration": true,
    "declarationDir": "./lib/types",
    "target": "ESNext",
    "module": "ESNext",
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false,
    "removeComments": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    ".storybook/**/*.js"
  ]
}
{
  "compilerOptions": {
    "lib": [
      "dom"
    ],
    "jsx": "react",
    "declaration": true,
    "target": "es5",
    "module": "amd",
    "sourceMap": true,
    "rootDir": "./src",
    "out": "./lib/index.js",
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "src/**/*.test.tsx",
    "src/**/*.story.tsx",
    ".storybook/**/*.js"
  ]
}